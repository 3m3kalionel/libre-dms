{
  "name": "libre-dms",
  "version": "1.0.0",
  "description": "A full-stack document management system",
  "main": "server/server.js",
  "scripts": {
    "build": "npm-run-all build:server build:client",
    "build:client": "webpack --config webpack.config.prod.babel.js --progress --colors",
    "build:server": "babel server -d dist --copy-files --ignore spec.js,helper.js",
    "clean": "rimraf ./dist && mkdir dist",
    "db:setup": "npm run db:sync -- --force && npm run sequelize -- db:seed:all",
    "db:sync": "node -r dotenv/config -r babel-register scripts/sync-db.js",
    "postbuild": "npm start",
    "postinstall": "npm run db:setup && npm run build",
    "prebuild": "npm run clean",
    "pretest": "cross-env NODE_ENV=test node -r dotenv/config -r babel-register server/test/helpers/seed-helper.js",
    "sequelize": "node -r dotenv/config ./node_modules/.bin/sequelize",
    "start": "cross-env NODE_ENV=production node -r dotenv/config dist/server.js",
    "start:api": "nodemon --exec 'node -r dotenv/config -r babel-register' server/server.js",
    "start:dev": "cross-env NODE_ENV=development npm-run-all --parallel start:api start:web",
    "start:web": "webpack-dev-server --config webpack.config.dev.babel.js --progress --colors",
    "test": "cross-env NODE_ENV=test node -r dotenv/config ./node_modules/.bin/jasmine --config=jasmine.json",
    "test:cover": "cross-env NODE_ENV=test nyc node -r dotenv/config ./node_modules/.bin/jasmine --config=jasmine.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-pessien/libre-dms.git"
  },
  "keywords": [
    "document",
    "management",
    "system"
  ],
  "author": "Princess-Jewel Essien",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela-pessien/libre-dms/issues"
  },
  "homepage": "https://github.com/andela-pessien/libre-dms#readme",
  "dependencies": {
    "babel-cli": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-register": "6.24.1",
    "bcryptjs": "2.4.3",
    "body-parser": "1.17.1",
    "cross-env": "4.0.0",
    "css-loader": "0.28.0",
    "csso-loader": "0.3.1",
    "dotenv": "4.0.0",
    "expect": "1.20.2",
    "express": "4.15.2",
    "extract-text-webpack-plugin": "2.1.0",
    "faker": "4.1.0",
    "file-loader": "0.11.1",
    "html-minify-loader": "1.1.0",
    "html-webpack-plugin": "2.28.0",
    "jquery": "3.2.1",
    "jsonwebtoken": "7.4.0",
    "jwt-decode": "2.2.0",
    "materialize-css": "0.98.2",
    "morgan": "1.8.1",
    "node-sass": "4.5.2",
    "npm-run-all": "4.0.2",
    "pg": "6.1.5",
    "pg-hstore": "2.3.2",
    "raw-loader": "0.5.1",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.3",
    "sequelize": "3.30.4",
    "style-loader": "0.16.1",
    "underscore": "1.8.3",
    "uuid": "3.0.1",
    "webpack": "2.4.1"
  },
  "devDependencies": {
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "jasmine": "2.6.0",
    "jasmine-spec-reporter": "4.1.0",
    "nodemon": "1.11.0",
    "nyc": "10.3.2",
    "supertest": "3.0.0",
    "webpack-dev-server": "2.4.5"
  },
  "engines": {
    "node": "7.7.1",
    "npm": "4.1.2"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*-helper.js",
      "dist"
    ],
    "watermarks": {
      "lines": [
        80,
        100
      ],
      "functions": [
        80,
        100
      ],
      "branches": [
        80,
        100
      ],
      "statements": [
        80,
        100
      ]
    },
    "sourceMap": false,
    "instrument": false
  }
}

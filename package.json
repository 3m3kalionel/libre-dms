{
  "name": "libre-dms",
  "version": "1.0.0",
  "description": "A full-stack document management system",
  "main": "server/server.js",
  "scripts": {
    "api-serve": "nodemon --exec 'node -r dotenv/config -r babel-register' server/server.js",
    "build": "npm-run-all clean build-server build-client",
    "build-client": "webpack --config webpack.config.prod.babel.js --progress --colors",
    "build-server": "babel server -d dist",
    "clean": "rimraf ./dist && mkdir dist",
    "post-install": "npm run build",
    "start": "cross-env NODE_ENV=production node -r dotenv/config dist/server.js",
    "start-dev": "npm-run-all --parallel api-serve web-serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "web-serve": "webpack-dev-server --config webpack.config.dev.babel.js --progress --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-pessien/libre-dms.git"
  },
  "keywords": [
    "document",
    "management",
    "system"
  ],
  "author": "Princess-Jewel Essien",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela-pessien/libre-dms/issues"
  },
  "homepage": "https://github.com/andela-pessien/libre-dms#readme",
  "dependencies": {
    "acho": "3.2.1",
    "babel-cli": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-register": "6.24.1",
    "css-loader": "0.28.0",
    "csso-loader": "0.3.1",
    "express": "4.15.2",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "html-minify-loader": "1.1.0",
    "html-webpack-plugin": "2.28.0",
    "jquery": "3.2.1",
    "materialize-css": "0.98.2",
    "node-sass": "4.5.2",
    "npm-run-all": "4.0.2",
    "raw-loader": "0.5.1",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.3",
    "style-loader": "0.16.1",
    "webpack": "2.4.1"
  },
  "devDependencies": {
    "cross-env": "4.0.0",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "nodemon": "1.11.0",
    "webpack-dev-server": "2.4.5"
  }
}
